<Window x:Class="PhoenixSetup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoenixSetup"
        xmlns:controls="clr-namespace:PhoenixSetup.Service.View.UserControls"
        mc:Ignorable="d"
        Title="PhoenixSetup" Height="650" Width="1000"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0A0A">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <controls:AppListControl Grid.Column="0"/>

        <GridSplitter Grid.Column="1"
                      Width="3"
                      HorizontalAlignment="Stretch"
                      Background="#FF1A1A1A"/>

        <controls:InstallControl Grid.Column="2"
                                 Margin="10"/>
    </Grid>
</Window>
